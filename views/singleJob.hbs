<section class="single-post-section">
    <div class="container">
        <div class="title-section">
            <h1>{{job.title}}</h1>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="single-post-box">
                    <div class="blog-post">
                        <div class="post-gallery">
                            <img src="/upload/{{job.id}}.jpg">
                        </div>
                        <div class="post-content">

                            <div class="post-title">
                                <span class="date">{{job.dateAdded}}</span>
                            </div>
                            {{{job.description}}}

                        </div>

                    </div>

                    <div class="share-box">
                        <ul class="share-list">
                            <li><span>Share:</span></li>
                            <li><a href="#">facebook</a></li>
                            <li><a href="#">twitter</a></li>
                            <li><a href="#">google +</a></li>
                        </ul>
                    </div>


                </div>
            </div>
            <div class="col-md-4">

                <div class="sidebar">
                    <h2>Apply to this job</h2>
                    <form action="/job/add/candidate" method="post">
                         <input placeholder="Job title..." type="hidden" name="jobTitle" value="{{job.title}}" class="form-control input-sm"/>
                         <input placeholder="Job ID..." type="hidden" name="_job" value="{{job._id}}" class="form-control input-sm"/>
                        <div class="form-group">
                            <label>Email</label>
                            <input placeholder="Email..." name="email" class="form-control input-sm"/>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input placeholder="Phone..." name="phone" class="form-control input-sm"/>
                        </div>
                        <div class="form-group">
                            <label>LinkedIn Profile</label>
                            <input placeholder="LinkedIn Profile..." name="linkedin" class="form-control input-sm"/>
                        </div>
                         <div class="apply-button">
                            <button type="submit" class="btn btn-primary btn-block">APPLY</button>
                        </div>
                    </form>
                   

                    <div class="category-widget widget">
                        <h2>Categories</h2>
                        <ul class="category-list">
                            <li><a href="/jobs">All Jobs</a></li>
                            {{#each categories}}
                                <li><a style="text-transform: capitalize" href="/jobs/category?name={{this}}">{{this}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="popular-widget widget">
                        <h2>Other Jobs</h2>
                        <ul class="popular-list">
                            {{#each jobs}}
                                <li>
                                    <img src="/upload/{{this.id}}.jpg">
                                    <div class="side-content">
                                        <h2><a href="/job?id={{this.id}}">{{this.title}}</a></h2>
                                        <span style="text-transform: capitalize">{{this.category}}</span>
                                    </div>
                                </li>
